@charset "UTF-8";

.homeMiaosha:after , .content:after , .imageBox:after ,.proList:after{
  clear: both;
  display: table;
  content: "";
}

.textEllipsis{ /*单溢出*/
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap;
}
.lineClamp{ /*三行溢出*/
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/*默认 100% 宽度*/
c-swiper , proList , van-submit-bar , .ranking{
  width: 100%;
}



vanbar{
  width: 100%;
}
page{
  color: #3d3d3d;
  padding-bottom:80px;

  box-sizing: border-box;
  /* background-color: #F0F1F3; */
}

view,
image,
swiper,
icon,
text {
    box-sizing: border-box;
}

button {
    line-height: 1;
    font-size: 0;
    padding: 0;
    border-radius: 0;
}

button::hover {
    border-style: none;
}

button:after {
    border-style: none;
}

button::after {
    border-style: none;
}



.redRightRadius{
  width: 100%;
  padding: 3%;
  border:1px solid #f00;
  border-top-left-radius: 10px;
  border-bottom-left-radius: 10px;
  border-top-right-radius: 10px;
  border-bottom-right-radius: 0px;
}
.redFont{
  color:#f00;
  font-size:100%;
}
.grayFont{
  color:#666;
  font-size:100%;
  text-decoration:line-through;
}

.textCenter{
    text-align: center;
    align-items: center;
    justify-content: center;
}

.imageBox {
  width: 100%;
  position: relative;
  padding-top: 100%;
  overflow: hidden;
}
.imageBox image{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  -webkit-transform: translate(-50%,-50%);
  -moz-transform: translate(-50%,-50%);
}
