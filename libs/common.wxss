@charset "UTF-8";

.homeMiaosha:after , .content:after , .imageBox:after{
  clear: both;
  display: table;
  content: "";
}


page {
    box-sizing: border-box;
    background-color: #F0F1F3;
}

view,
image,
swiper,
icon,
text {
    box-sizing: border-box;
}

.ui-main {
    /*padding-top: 64px;*/
    font-family: PingFangSC-Regular;
    font-size: 0;
}


.ui-richImg {
    width: 750rpx;
    height: auto;
}

form {}

.ui-submitBtn {
    padding: 0;
    margin: 0;
    width: 100%;
    height: 100%;
    background-color: #fff;
    border-style: none;
}

.button-hover {
    background-color: #fff;
    border-style: none;
}

button {
    line-height: 1;
    font-size: 0;
    padding: 0;
    border-radius: 0;
}

button::hover {
    border-style: none;
}

button:after {
    border-style: none;
}

button::after {
    border-style: none;
}

.flexColumn{
  display: flex;
  flex-direction: column;
}
.flexRow{
  display: flex;
  flex-direction: row;
}
.flexOne{
    display: flex;
    flex: 1;
}
.textCenter{
    text-align: center;
    align-items: center;
    justify-content: center;
}