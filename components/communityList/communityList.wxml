<view class="proList">

	<view class="item" wx:for="{{ productList }}" wx:for-item="item"  wx:for-index="idx" wx:key="idx" wx:if="{{ idx < num }}" bindtap="readyProList" data-id="{{idx}}" data-title="{{item.title}}">
		<view class="imgBox">
			<van-image
			  width="100%"
			  height="200"
			  lazy-load
			  class="proListItemImg"
		      src="{{item.imgPath}}"
		    />
		</view>
		<view>
		    <view class="title">
		    	<text>{{item.title}}</text>
		    	<van-icon name="eye-o" />
		    	<!-- <van-button icon="eye-o" type="primary">3214</van-button> -->
		    </view>
		    <view class="intro lineClamp">{{item.intro}}</view>
		</view>
	</view>

